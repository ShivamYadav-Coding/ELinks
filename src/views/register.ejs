<!doctype html>
<html lang="en">
<head>
<%- include('./partials/header.ejs') %>
<title>Hello, world!</title>
</head>
<body class="bg-gray-800 font-body">
<div class="flex flex-col h-full w-full justify-center">

    <h1 class="m-3 text-4xl text-center text-gray-100"><img src="img/NoteYacht-logo.gif" alt="NoteYacht logo" class=" h-14 w-14 inline "> NoteYacht</h1>
    <form action="/register" method="POST" class="place-self-center text-center bg-gray-50 w-11/12 p-2 mt-3 sm:w-96 rounded-lg shadow-2xl">
        <h2 class="font-bold text-2xl text-indigo-600 mt-1">Register</h1>

        <!-- Email id -->
        <div class="form-element text-left m-2">
            <input type="email" name="email" id="email1" placeholder="Enter your email" class="w-full p-2 border rounded-md border-gray-700 my-1 focus:outline-none focus:shadow-lg">
            <p class="err hidden">Erorr statement.</p>
        </div>

        <!-- Name -->
        <div class="form-element text-left m-2">
            <input type="text" name="name" id="name1" placeholder="Enter your full name" class="w-full p-2 border rounded-md border-gray-700 my-1 focus:outline-none focus:shadow-lg">
            <p class="err hidden">Erorr statement.</p>
        </div>

        <!-- UserName -->
        <div class="form-element text-left m-2">
            <input type="text" name="username" id="username1" placeholder="Enter username" class="w-full p-2 border rounded-md border-gray-700 my-1 focus:outline-none focus:shadow-lg">
            <p class="err hidden">Erorr statement.</p>
        </div>

        <!-- Password -->
        <div class="form-element text-left m-2">
            <input type="password" name="password" id="password1" placeholder="Enter your password" class="w-full p-2 border rounded-md border-gray-700 my-1 focus:outline-none focus:shadow-lg">
            <p class="err hidden">Erorr statement.</p>
        </div>

        <!-- Confirm Password -->
        <div class="form-element text-left m-2">
            <input type="password" name="confirmPassword" id="confirmPassword1" placeholder="Re-enter your password" class="w-full p-2 border rounded-md border-gray-700 my-1 focus:outline-none focus:shadow-lg">
            <p class="err hidden">Erorr statement.</p>
        </div>

        <!-- Submit Button -->
        <button type="submit" id="btn" class="btn btn-indigo w-full">Register</button>
        <div class="m-2">
            <p class="inline">Already have an account? </p><a href="/">Login</a>
        </div>
    </form>
</div>
<!-- <script src="/js/script.js"></script> -->
</body>
</html>